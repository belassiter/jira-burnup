{
  "name": "jira-burnup-chart",
  "version": "1.0.0",
  "description": "Jira Burnup Chart Visualizer",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "package": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run",
    "verify": "npm run lint && npm run test && npm run build",
    "pack:simple": "tsc && vite build && electron-packager . JiraBurnupChart --platform=win32 --arch=x64 --out=release-simple --overwrite --ignore=\"^/src\" --ignore=\"^/.git\" --ignore=\"^/node_modules/electron\""
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@mantine/core": "^7.17.8",
    "@mantine/dates": "^7.3.2",
    "@mantine/hooks": "^7.3.2",
    "@tabler/icons-react": "^3.37.1",
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.10",
    "html-to-image": "^1.11.13",
    "lodash": "^4.17.23",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "electron-packager": "^17.1.2",
    "eslint": "^9.39.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.2",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.18"
  },
  "author": "Jira Burnup Chart",
